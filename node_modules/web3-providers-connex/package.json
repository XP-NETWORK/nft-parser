{
	"name": "web3-providers-connex",
	"version": "0.3.1",
	"description": "Web3.js provider built upon Connex.js to allow Web3.js to be compatible with the Thor protocol",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rm -rf dist/ && node_modules/.bin/tsc -d -p . ",
		"test-web3": "mocha --no-timeouts --colors -r ts-node/register test/web3/*.ts",
		"test-ethers": "mocha --no-timeouts --colors -r ts-node/register test/ethers/*.ts",
		"test-restful": "mocha --no-timeouts --colors -r ts-node/register test/restful/*.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zzGHzz/web3-providers-connex.git"
	},
	"author": "Peter Zhou",
	"license": "LGPL-3.0",
	"dependencies": {
		"@vechain/connex-driver": "^2.0.8",
		"@vechain/connex-types": "^2.0.2",
		"ethers": "^5.6.2",
		"eventemitter3": "^4.0.4",
		"thor-devkit": "^2.0.4",
		"web3": "^1.7.1"
	},
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^10.17.60",
		"@vechain/connex-framework": "^2.0.8",
		"chai": "^4.3.6",
		"mocha": "^9.2.0",
		"thor-builtin": "^1.0.0",
		"ts-node": "^10.5.0",
		"tsconfig-paths": "^3.14.1",
		"typescript": "^4.5.5"
	}
}
